---
import FormContact from "../components/FormContact.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Page">
  <main>
    <h1>Interested in our business pricing?</h1>
    <p>
      Fill out the form to view details and we'll contact you as soon as
      possible.
    </p>
    <FormContact />
  </main>
</Layout>

<style>
  main {
		margin: 0 auto;
		padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
		justify-content: center;
		line-height: 1.5;
    max-width: 900px;
  }
	h1 {
		font-size: 4rem;
		text-align: center;
		margin-bottom: 1rem;
		width: 80%;
	}
	p {
		font-size: 2rem;
		text-wrap: wrap;
		text-align: center;
		margin-top: 0;
		margin-bottom: 4rem;
		width: 80%;
	}
	@media (max-width: 850px) {
		h1 {
			font-size: 2.5rem;
			width: 100%;
		}
		p {
			font-size: 1rem;
			width: 100%;
		}
  }

</style>
